  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body class="DashboardStyle">
  <div class="DashboardHeader">
  <!--<image id="DashboardImg" src="Project.png"></image>-->
<h1 id="dashboardTitle">Dashboard</h1>
<h1 align="center">My Projects</h1>
  </div>
<div id="horizontalLine"></div>


<p id="notice"><%= notice %></p>
&nbsp;
&nbsp;
&nbsp;
<container id="NewProjectBttn"><%= link_to '+ New Project', new_board_path %></container>
<br><br>

<%= javascript_include_tag 'board.js' %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div >
  <tbody>
    <% current_user.boards.each do |board| %>
     <!-- HERE I TRIED TO MAKE EACH PHYSICAL BOARD CLICKABLE-->
    <tr class="ExistingBoards" data-id = <%=board.id%>>
        <td id="BoardNmeStyle"><br><%= board.name %><br><br><br></td>
        <td id="DashProjectShowStyle"><%= link_to 'Show ',  board %></td>
        <% if board.owner_id == current_user.id %>
        <td id="DashProjectEditStyle"> |<%= link_to 'Edit ',  edit_board_path(board) %> | </td>
        <td id="DashProjectDeleteStyle"><%= link_to 'Delete',  board_path(board), :method => "delete", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>
<script>
  MakeBoardsClickable()
</script>
</body>

